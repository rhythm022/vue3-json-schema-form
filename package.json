{
  "name": "vue3-json-schema-form",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build:core": "cross-env TYPE=lib vue-cli-service build --target lib --name index lib/index.ts --no-clean",
    "build:theme": "cross-env TYPE=lib vue-cli-service build --target lib --name theme-default/index lib/theme-default/index.tsx --no-clean",
    "build": "rimraf dist && npm run build:core && npm run build:theme",
    "test:unit": "vue-cli-service test:unit --coverage",
    "lint": "vue-cli-service lint --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^6.12.4",
    "ajv-errors": "^1.0.1",
    "ajv-i18n": "^3.5.0",
    "core-js": "^3.6.5",
    "json-schema-merge-allof": "^0.7.0",
    "jsonpointer": "^4.1.0",
    "jss": "^10.4.0",
    "jss-preset-default": "^10.4.0",
    "lodash.union": "^4.6.0",
    "vue": "^3.0.0",
    "vue-jss": "^0.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/jest": "^24.0.19",
    "@types/json-schema-merge-allof": "^0.6.0",
    "@types/lodash.union": "^4.6.6",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/babel-plugin-jsx": "^1.0.0-rc.2",
    "@vue/cli-plugin-babel": "~4.5.6",
    "@vue/cli-plugin-eslint": "~4.5.6",
    "@vue/cli-plugin-typescript": "~4.5.6",
    "@vue/cli-plugin-unit-jest": "~4.5.6",
    "@vue/cli-service": "~4.5.6",
    "@vue/compiler-sfc": "^3.0.0-0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "2.0.0-beta.5",
    "circular-dependency-plugin": "^5.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^7.0.0-0",
    "husky": "^8.0.0",
    "lint-staged": "^9.5.0",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5",
    "vue-jest": "^5.0.0-alpha.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
